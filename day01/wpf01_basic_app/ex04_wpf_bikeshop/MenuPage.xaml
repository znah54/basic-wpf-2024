<Page x:Class="ex04_wpf_bikeshop.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ex04_wpf_bikeshop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="BtnProduct" Content="제품 리스트" Width="200" 
                    Margin="30,40,15,40" Click="BtnProduct_Click" />
            <Button x:Name="BtnLiveSupport" Content="제품 지원" Width="200" 
                    Margin="15,40" Click="BtnLiveSupport_Click"/>
            <Button x:Name="BtnEmailSupport" Content="이메일 전송" Width="200" 
                    Margin="15,40,30,40" Click="BtnEmailSupport_Click"/>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="0" Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Local BikeShop" FontFamily="Bauhaus 93" FontWeight="Bold" FontSize="48" Foreground="Red"/>
        </Grid>
    </Grid>
</Page>
